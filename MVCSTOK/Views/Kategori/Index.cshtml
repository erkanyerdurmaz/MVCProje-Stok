@using MVCSTOK.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKATAGORILER>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATAGORİ ID    </th>
        <th>KATAGORİ ADI    </th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>

    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KATAGORIID    </th>
                <td>@ktgr.KATAGORIAD    </td>
                <td> <a href="/KATEGORI/SIL/@ktgr.KATAGORIID" class="btn btn-danger">SİL </a>  </td>
                <td> <a href="/KATEGORI/KatagoriGetir/@ktgr.KATAGORIID" class="btn btn-success">GÜNCELLE </a>  </td>
            </tr>


        }



    </tbody>

</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/KATEGORI/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE </a>