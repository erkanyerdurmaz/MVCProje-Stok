@model MVCSTOK.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "SaveImages";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>SaveImages</h2>

@using (Html.BeginForm("SaveImages","Urun",FormMethod.Post,new {enctype="multipart/form-data" }))
{

    @Html.Hidden("hiddenId",Url.RequestContext.RouteData.Values["id"])
    <p>
        @Html.TextBox("UploadedImage","",new {Type="File" })

    </p>

    <p>
        <input type="submit" value="Yükle" />


    </p>


}
@{ 
    if(ViewBag.Message!=null)
    {
        var dir = "~/SaveImages/" + Url.RequestContext.RouteData.Values["id"]+".jpg";
        @ViewBag.Message
        <p> <img src="@Url.Content(dir)" width="300" />  </p>

    }

}

<hr />
<p>
    @Html.ActionLink("Urun","Index")


</p>